<h1>Todas as tasks</h1>
<ul class="task-list">
    {{#each tasks}}
        <li>
            <a href="/" class="title">{{this.title}}</a>
            <div class="actions"> {{!-- icones vieram do site bootsrap icons, estao linkados no layout mains --}}
                <a href="/"><i class="bi bi-check2"></i></a>
                <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil"></i></a>
                <form action="/tasks/remove" method="POST">
                    <input type="hidden" name="id" value={{this.id}}>
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>